#!/bin/bash

echo "游 Iniciando configura칞칚o da Raspberry Pi como Access Point WiFi + Roteador"
echo "游늷 Este script configura NAT, DHCP, DNS e seguran칞a b치sica do SSH"

# ==============================
# 1. Ativar IP Forwarding
# ==============================
echo "游댢 Ativando IP Forwarding..."
sudo sysctl -w net.ipv4.ip_forward=1
sudo sh -c "echo 'net.ipv4.ip_forward=1' >> /etc/sysctl.conf"

# ==============================
# 2. Configurar NAT com iptables
# ==============================
echo "游깷 Configurando NAT (iptables)..."
sudo iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
sudo iptables -A FORWARD -i eth0 -o wlan0 -m state --state RELATED,ESTABLISHED -j ACCEPT
sudo iptables -A FORWARD -i wlan0 -o eth0 -j ACCEPT

# ==============================
# 3. Instalar iptables-persistent para salvar regras
# ==============================
echo "游 Salvando regras do iptables..."
sudo apt install -y iptables-persistent
sudo netfilter-persistent save

# ==============================
# 4. Configurar interface WiFi (wlan0)
# ==============================
echo "游니 Configurando IP est치tico para wlan0..."
sudo sh -c "cat > /etc/dhcpcd.conf << EOL
interface wlan0
    static ip_address=192.168.4.1/24
    nohook wpa_supplicant
EOL"

# ==============================
# 5. Configurar dnsmasq (servidor DHCP/DNS)
# ==============================
echo "游대 Configurando dnsmasq (DHCP)..."
sudo mv /etc/dnsmasq.conf /etc/dnsmasq.conf.bak
sudo sh -c "cat > /etc/dnsmasq.conf << EOL
interface=wlan0
dhcp-range=192.168.4.2,192.168.4.20,255.255.255.0,24h
EOL"

sudo systemctl restart dnsmasq

# ==============================
# 6. Configurar hostapd (Access Point WiFi)
# ==============================
echo "游닜 Configurando hostapd (Access Point)..."
sudo sh -c "cat > /etc/hostapd/hostapd.conf << EOL
interface=wlan0
driver=nl80211
ssid=Rasp_Attend
hw_mode=g
channel=7
wmm_enabled=0
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase=minhasenha123
wpa_key_mgmt=WPA-PSK
rsn_pairwise=CCMP
EOL"

sudo sh -c "echo 'DAEMON_CONF=\"/etc/hostapd/hostapd.conf\"' >> /etc/default/hostapd"

sudo systemctl unmask hostapd
sudo systemctl enable hostapd
sudo systemctl start hostapd

# ==============================
# 7. Reiniciar servi칞os de rede
# ==============================
echo "游댃 Reiniciando servi칞os de rede..."
sudo systemctl restart dhcpcd
sudo systemctl restart dnsmasq
sudo systemctl restart hostapd

